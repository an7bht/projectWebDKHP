<div class="container">
    <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4" style="margin-left: 30%; border-style: ridge;">        
        <a href="/nhanvien/cnchuyennganh"><h1>Trở về danh sách</h1></a>
        <form action="/nhanvien/cnchuyennganh/save_chuyennganh" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="MaChuyenNganh">Mã chuyên ngành:</label>
                <input type="text" class="form-control" id="machuyennganh" placeholder="Mã chuyên ngành" name="machuyennganh" required>
            </div>
            <div class="form-group">
                <label for="MaKhoa">Mã khoa:</label>
                <select class="form-control" id="makhoa" name="makhoa" required>
                  <%for(let i=0;i < dsmakhoa.length;i++){%>
                    <option value="<%=dsmakhoa[i].MaKhoa%>">
                      <%=dsmakhoa[i].MaKhoa%>
                    </option>
                    <%}%>
                </select>
            </div>
            <div class="form-group">
                <label for="TenChuyenNganh">Tên chuyên ngành:</label>
                <input type="text" class="form-control" id="tenchuyennganh" placeholder="Tên chuyên ngành" name="tenchuyennganh" required>
            </div>
            <button type="submit" class="btn btn-default">Lưu</button>
            <div>
                <br>
            </div>
        </form>
    </div>
</div>