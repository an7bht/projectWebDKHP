<div class="container">
    <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4" style="margin-left: 30%; border-style: ridge;">
        <a href="/nhanvien/cngiangvien"><h1>Trở về danh sách</h1></a>
        <form action="/nhanvien/cngiangvien/save_giangvien" method="post" enctype="multipart/form-data" >
            <div class="form-group">
                <label for="MaGV">Mã giảng viên:</label>
                <input type="text" class="form-control" id="magv" name="magv" required>
            </div>
            <div class="form-group">
                <label for="HoTen">Họ tên:</label>
                <input type="text" class="form-control" id="hotengv" name="hotengv" required>
            </div>
            <div class="form-group">
                <label for="DiaChi">Địa chỉ:</label>
                <input type="text" class="form-control" id="diachigv" name="diachigv" required>
            </div>
            <div class="form-group">
                <label for="GioiTinh">Giới tính:</label>
                <select class="form-control" id="select_giotinhgv" name="gioitinhgv">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>
            <div class="form-group">
                <label for="NgaySinh">Ngày sinh:</label>
                <input type="date" class="form-control" id="ngaysinhsv"  name="ngaysinhsv" required>
            </div>
            <div class="form-group">
                <label for="SoDt">Số điện thoại:</label>
                <input type="text" class="form-control" id="sodt" name="sodt" required>
            </div>
            <div class="form-group">
                <label for="MaKhoa">Mã khoa:</label>
                <select class="form-control" id="makhoa" name="makhoa" required>
                  <%for(let i=0;i < dsmakhoa.length;i++){%>
                    <option value="<%=dsmakhoa[i].MaKhoa%>">
                      <%=dsmakhoa[i].MaKhoa%>
                    </option>
                    <%}%>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Lưu</button>
            <div>
                <br>
            </div>
        </form>
    </div>
</div>